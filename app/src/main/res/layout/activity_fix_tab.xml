<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#424646"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">
<!-- android:textColor="@color/color_2b2b2b"-->
    <!--app:pstsIndicatorColor="@color/color_0babd1"-->
    <!-- app:pstsTextSelectedColor="@color/color_0babd1"-->
    <!--app:pstsUnderlineColor="@color/color_e8e8e8"-->
    <com.gxz.PagerSlidingTabStrip
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:textColor="#dddddf"
        android:textSize="14dp"
        app:pstsDividerColor="@android:color/transparent"
        app:pstsIndicatorColor="#2BB4A5"
        app:pstsIndicatorHeight="4dp"
        app:pstsScaleZoomMax="0.2"
        app:pstsShouldExpand="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:pstsTabPaddingLeftRight="12dp"
        app:pstsTextSelectedColor="@android:color/white"
        app:pstsUnderlineColor="#002BB4A5" />

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tabs" />

</RelativeLayout>
